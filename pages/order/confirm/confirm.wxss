/* pages/order/confirm/confirm.wxss */
page{
  background: #eee;
}
.addaddress{
  background: #fff;
  padding: 5px 0 5px 5px;
  font-size: 14px;
}
.addaddress .icon{
  padding: 0 2px 0 2px;
  border: 1px solid red;
  border-radius: 20%;
  color: red;
}
.text{
  padding-left: 13px;
  color: red;
}
.firstview{
  padding-bottom: 10px;
  color: green;
}
.address{
  background:#fff;
  display: flex;
  flex-direction: column;
  align-content: center;
  font-family:Arial, Helvetica, sans-serif;
  font-size: 14px;
  padding: 10px 20px 10px 10px;
}
.addinfo{
  color: #999;
}

.arrow{
width: 10px;
height: 10px;
border-top: 2px solid #ccc;
border-right: 2px solid #ccc;
position: absolute;
right: 20rpx;
transform: rotate(45deg);
margin-top:30rpx;
}
.shopInfo{
  margin: 15px 0 0 12px;
  padding: 10px;
  width:86%;
  background: white;
  display: flex;
  flex-wrap:wrap;
  position: relative;
  border-radius: 10px 10px 0 0;
}
.shopInfo text{
  display: block;
  font-family:Arial, Helvetica, sans-serif;
  font-size: 12px;
}
.firText{
  font-weight: 600;
}
