page{
  background: #f7f7fa;
}
.content{
  height: 100%;
}
/* 头像 昵称 */
.personal{
  width: 100%;
  height: 100px;
  background: #ff314b;
  position: relative;
}
.personal image{
  width: 60px;
  height: 60px;
  margin: 20px 0 0 20px;
  border-radius: 50%;
}
.personal text{
  color: white;
  position: absolute;
  left: 90px;
  top: 40px;
}
/* 我的订单 */
.order{
  height: 130px;
  width: 93%;
  margin: 10px 0 0 10px;
}
.myOrder{
  height: 40px;
  line-height: 40px;
  border-radius: 6px 6px 0 0;
  background: white;
  font-family:'Courier New', Courier, monospace;
  font-size: 12px;
  position: relative;
}
.firText{
  font-weight:600;
  margin-left: 10px;
}
.lastText{
  position: absolute;
  right: 10px;
  color: #777;
}
.orderDetail{
  margin-top: 2px;
  height: 80px;
  background: white;
  display: flex;
  flex-direction: row;
  border-radius: 0 0 6px 6px;
}
.detail{
  display: flex;
  flex-direction: column;
  padding: 10px;
  text-align: center;
}
.detail image{
  width: 20px;
  height: 20px;
  padding: 10px;
}
.detail text{
  font-family:'Courier New', Courier, monospace;
  font-size: 12px;
  color: #777;
}
/* 常用功能 */
.common{
  width: 93%;
  margin: 10px 0 0 10px;
}
.commonDetail{
  margin-top: 5px;
  height: 90px;
  background: white;
  display: flex;
  flex-direction: row;
  border-radius: 0 0 6px 6px;
}
.commonDetailList{
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 25%;
}
.commonDetailList image{
  height: 30px;
  width: 30px;
  margin: 20px 0 10px 22px;
}
.commonDetailList text{
  font-family:'Courier New', Courier, monospace;
  font-size: 12px;
  color: #777;
}
