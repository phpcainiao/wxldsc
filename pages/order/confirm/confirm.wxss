.orderList{
  width: 86%;
  background: white;
  margin: 0 0 0 12px;
  padding: 10px;
  font-size: 12px;
  display: flex;
  flex-direction: row;
}
.orderList image{
  width: 80px;
  height: 80px;
}
.title{
  width: 59%;
  font-weight: 600;
  margin-left: 30px;
}
.price{
  display: flex;
  flex-direction: column;
}
.sum{
  width: 86%;
  background: white;
  margin: 0 0 0 12px;
  padding: 10px;
  font-size: 12px;
  text-align: right;
  border-radius: 0 0 10px 10px;
}
.remarks{
  width: 86%;
  background: #fff;
  margin: 0 0 0 12px;
  padding: 10px 0 0 20px;
  font-size: 12px;
  display: flex;
  flex-direction: row;
}
.remarks input{
  display: inline-block;
}
.remarks text{
  display: inline-block;
}
.bottom{
  display: flex;
  flex-direction: row;
  align-items: center;  /*垂直居中*/
  background: #fff;
  position: fixed;
  bottom: 0;
  height: 40px;
  width: 100%;
}
.priceview{
  font-family:Arial, Helvetica, sans-serif;
  padding-left: 10px;
}
.bottext{
  font-size: 14px;
}
.totalprice{
  font-size: 16px;
  color: red;
}
.button{
  background: #f60;
  color: white;
  height: 40px;
  line-height: 40px;
  padding: 0 30rpx;
  position: fixed;
  right: 0;
}