/* pages/goods/detail/detail.wxss */
page{
  background: #f7f7fa;
}
.swiper-image{
  width: 100%;
  height: 100%;
}
.summary{
  display: flex;
  flex-direction: column;
  margin: 10rpx 0;
  background:white;
}
.attr{
  margin: 5px;
  font-size: 14px;
  font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
}
.price{
  font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  font-size: 24px;
  color:red;
}
.title{
  font-size: 32rpx;
  font-weight:bolder;
  margin: 10rpx;
}
.detail {
	margin-bottom: 50px;
}
.footer{
  width: 100%;
  background: #f9f9f9;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
}
.opt-buttons{
   display: flex;
   flex-direction: row;
   width: 100%;
   justify-content: space-around;
}
.button-group{
  display: flex;
  flex-direction: column;
  text-align: center;
}
.button-text{
  font-size: 30rpx;
}
.button-image{
  width: 60rpx;
  height: 60rpx;
}
.contact-button{
  width: 60rpx;
}
.add-cart{
  font-size: 36rpx;
  background: #f60;
  width: 350rpx;
  color:white;
}

/* 弹出框部分 */
.tck{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background-color: rgba(0, 0, 0, 0.5);
}
.tck .tck-tm{
  height: 20%;
}
.tck .main{
  height: 80%;
  background: white;
  border-top-left-radius:30rpx;
  border-top-right-radius: 30rpx;
}
.tck .top{
  margin: 0 30rpx;
  padding-top: 30rpx;
  display: flex;
  flex-direction: row;
}
.tck .top image{
  width: 240rpx;
  height: 260rpx;
}
.topDetail{
  display: flex;
  flex-direction: column;
  margin: 30rpx 0 0 30rpx;
  /*line-height: 60rpx;*/
}
.topDetail text:first-child{
  display: block;
  color: orangered;
  font-size: 36rpx;
  margin-bottom: 15rpx;
}
.topDetail text:nth-child(2){
  display: block;
  color: #ccc;
  font-size: 24rpx;
  margin-bottom: 15rpx;
}
.topDetail text:nth-child(3){
  display: block;
  font-size: 30rpx;
}
.top icon{
  position: fixed;
  right: 30rpx;
}
.middle{
  margin-top: 50rpx;
  border-bottom: 1px solid #eee;
  padding-bottom: 30rpx;
}
.middle .colorTitle{
  margin-top: 80rpx;
  font-size: 34rpx;
  margin: 30rpx 0 0 30rpx;
}
.cate{
  margin-left: 30rpx;
}
.middle .colorCat{
   margin: 20rpx 20rpx 0 0;
   float:left;
   border-radius: 10rpx;
   padding: 10rpx;
   display: flex;
   align-items: center;
   border: 1px solid white;
}
/* .colorCat image{
  width: 50rpx;
  height: 50rpx;
} */
.colorCat text{
   font-size: 28rpx;
}
.clear{
  clear: both;
}
.bottom-qd{
  position: fixed;
  bottom: 0;
  width:100%;
  display: flex;
  justify-content: center;/*水平居中*/
  padding-top: 15rpx;
  border-top: 1px solid #eee;
}
.bottom-qd .qd{
  margin: 0 30rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: orangered;
  border-radius: 40rpx;
  text-align: center;
  color: white;
  font-size: 32rpx;
}
